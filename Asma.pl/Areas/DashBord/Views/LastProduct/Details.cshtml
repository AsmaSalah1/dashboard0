@model LastProduct
@section header {
    Details 
}
<div class="col-md-12">
    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">Details for @Model.Name</h3>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr class="text-primary">
                        
                        <th>Name</th>
                        <th>Price</th>
                        <th>Is DEleted?</th>
                        <th>When Created</th>
                    </tr>
                </thead>
                <tbody>
                   
                        <tr>
                            <td>@Model.Name</td>
                            <td>
                               @Model.Price
                            </td>
                            <td>@(Model.IsDeleted?"Delete":"Active")</td>
                            <td>
                                @Model.CreatedAt
                            </td>
                        </tr>
                    
                </tbody>
            </table>
        </div>

        <div class="card-footer clearfix">
            <ul class="pagination pagination-sm m-0 float-right">
                <li class="page-item"><a class="page-link" href="#">«</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">»</a></li>
            </ul>
        </div>
    </div>
</div>
        <a asp-controller="LastProduct" asp-action="Index" class="btn btn-info col-md-1">back</a>
