@model Asmaa.Pl.Areas.DashBord.ViewModels.FeaturesVM.FeaturesCreateVM


<div class="col-md-6">

<div class="card card-primary">
<div class="card-header">
            <h3 class="card-title"> Create Features</h3>
</div>


        <form asp-action="Create" asp-controller="Features" enctype="multipart/form-data">
<div class="card-body">
<div class="form-group">
<label asp-for="Name">Feature name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter Name">
</div>

                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <textarea  asp-for="Description" class="form-control" placeholder="Enter description"></textarea>
                </div>
                <div class="form-group row">
                    <label asp-for="Image" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Image" class="form-control imageInput" />
                    </div>
                    <div class="form-group">
                        <img src="#" asp-for="Image" class="ImagePrivew" style="display:none" width="80px" height="80px" />
                    </div>
                </div>
</div>

<div class="card-footer">
<button type="submit" class="btn btn-primary">Submit</button>
</div>
</form>
</div>

</div>
