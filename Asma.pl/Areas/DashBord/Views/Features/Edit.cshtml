@model FeaturesCreateVM

@section header {
    Edit
}
<div class="col-md-8">
    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">Edit</h3>
        </div>


        <form asp-action="Edit" class="form-horizontal" enctype="multipart/form-data">
            <div class="card-body">
                <input type="hidden" asp-for="Id" />
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Name" class="form-control" placeholder="Name" />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Description" class="form-control" placeholder="Price" />
                    </div>
                </div>
              
                <!-- عرض الصورة القديمة -->
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Current Image</label>
                    <div class="col-sm-10">
                        <img src="~/files/Images/@Model.ImageName" class="img" width="100px" height="100px" />
                    </div>
                </div>
                <!-- حقل مخفي يحتوي على مسار الصورة القديمة -->
                <!-- عشان اذا عدلت مثلا بس الديسكربشن رح يرسل الصورة نال و يجيب ايرور ف لازم ارسل الصورة القديمة -->
                <input type="hidden" asp-for="ImageName" />
                <!-- رفع صورة جديدة -->
                <div class="form-group row">
                    <label asp-for="Image" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Image" type="file" class="form-control" />
                    </div>
                </div>
                

            </div>

            <div class="card-footer">
                <button type="submit" class="btn btn-info">Update</button>
                <a asp-controller="Features" asp-action="Index" class="btn btn-default float-right">Cancel</a>
            </div>

        </form>
    </div>
</div>
