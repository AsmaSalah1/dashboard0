@model TestimonalCreateVM
@section header {
    
}
<div class="col-md-8">
    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">Edit</h3>
        </div>


        <form asp-action="Edit" asp-controller="Testimonials" class="form-horizontal" >
            <div class="card-body">
                <input type="hidden" asp-for="Id" />
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Name" class="form-control" placeholder="Name" />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Description" class="form-control" placeholder="Price" />
                    </div>
                </div>


            </div>

            <div class="card-footer">
                <button type="submit" class="btn btn-info">Update</button>
                <a asp-controller="Testimonials" asp-action="Index" class="btn btn-default float-right">Cancel</a>
            </div>

        </form>
    </div>
</div>
