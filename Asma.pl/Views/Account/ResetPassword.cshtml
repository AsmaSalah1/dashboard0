@model Asmaa.Pl.ViewModel.ResetPasswordVM
@section styles {
    <link href="~/css/web/auth.css" rel="stylesheet" />
}
@* @{
    ViewData["Title"] = "ResetPass";
} *@

<section class="sign-in">
    <div class="container">
        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="~/css/web/signinimage.jpg" alt="sing up image"></figure>
            </div>
            <div class="signin-form">
                <h2 class="form-title">Reset Password</h2>
                <form method="POST" class="register-form" id="login-form" asp-action="ResetPassword">
                    <div class="form-group">
                        <label for="NewPassword"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="NewPassword" placeholder="New Password" />
                    </div>
                    <div class="form-group">
                        <label for="ConfirmPassword"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                    </div>
                  <input asp-for="Email" type="hidden"/>
                    <input asp-for="Token" type="hidden" />


                    <div class="form-group form-button">
                        <input type="submit" name="signin" id="signin" class="form-submit" value="Reset Password" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

