@model Asmaa.Pl.ViewModel.RegisterVM
@section styles {
<link href="~/css/web/auth.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
}
 @{
    ViewData["Title"] = "Register";
}

<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Register</h2>
                <form method="POST" class="register-form" id="register-form" asp-action="Register">
                    <div class="form-group">
                        <label for="UserName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="UserName" placeholder="Your Name" />
                    </div>
                    <div class="form-group">
                        <label for="Email"><i class="zmdi zmdi-email"></i></label>
                        <input asp-for="Email" placeholder="Your Email" />
                    </div>
                    <div class="form-group">
                        <label for="Password"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="Password" placeholder="Password" />
                    </div>
                    <div class="form-group">
                        <label for="ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input asp-for="ConfirmPassword" placeholder="Repeat your password" />
                    </div>
                   
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit btn btn-primary registerBtn" value="Register" />
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="~/css/web/register.png" alt="sing up image"></figure>
                <a asp-action="logIn" asp-controller="Account" class="btn btn-outline-primary signup-image-link ">I am already member</a>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    <!-- إضافة مكتبة SweetAlert من CDN -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      
        document.querySelector(".registerBtn").addEventListener("click", function () {
            // Swal.fire({
            //     title: 'تم',
            //     text: 'قم بفحص الايميل الخاص بك',
            //     icon: 'success',
            //     confirmButtonText: 'حسناً'
            // });

            Swal.fire({
                position: "center",
                icon: "success",
                title: "Please Check your email and confirem your account",
                showConfirmButton: false,
                timer: 3000
            
            });
        });

     
    </script>
 
}

