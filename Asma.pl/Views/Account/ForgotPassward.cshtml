@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ForgotPassward</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link href="~/css/web/auth.css" rel="stylesheet" />

</head>
<body>
    <section class="sign-in">
        <div class="container">
            <div class="signin-content">
                <div class="signin-image">
                    <figure><img src="~/css/web/signinimage.jpg" alt="sing up image"></figure>
                    <a href="#" class="signup-image-link">Create an account</a>
                </div>
                <div class="signin-form">
                    <h2 class="form-title">Forgot Password</h2>
                    <form method="dialog" asp-action="SentForPassEmail" class="register-form" id="login-form">
                        <div class="form-group">
                            <label for="Email"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input asp-for="Email" placeholder="Your Email" />
                        </div>

                        <div class="form-group form-button">
                            <input type="submit" class="form-submit submitBtn" value="Submit" />
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </section>

