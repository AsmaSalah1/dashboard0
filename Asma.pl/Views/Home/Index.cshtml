				</div>
			</div>
			<div class="col-md-6 col-lg-5 px-0">
				<form asp-action="ContactUs" asp-controller="Home">
					<div>
						<input asp-for="@Model.Name" type="text" placeholder="Name" />
					</div>
					<div>
						<input asp-for="@Model.Email" type="email" placeholder="Email" />
					</div>
					<div>
						<input asp-for="@Model.Phone" type="text" placeholder="Phone" />
					</div>
					<div>
						<input asp-for="@Model.Message" type="text" class="message-box" placeholder="Message" />
					</div>
					<div class="d-flex ">
						<button>
							SEND
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>

